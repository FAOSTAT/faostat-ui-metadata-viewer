<script type='text/x-handlebars-template' id='content'>
    {{#if addHeader}}
        <div class="row">
            <div class="col-lg-12">
                <div class="pull-right" >
                    <a class="btn-floating waves-effect waves-light btn-default" data-role="export"><i class="material-icons">file_download</i> </a>
                </div>
            </div>
        </div>
    {{/if}}
    {{#each data}}
        <h4 style="color:#337ab7;">{{this.code}}) {{this.label}}</h4>
        {{#each subsections}}
            <div class="row" style="margin-left:5px;font-size:13px;">
                <div class="col-sm-3">
                    <p><b>{{this.label}}</b></p>
                </div>
                <div class="col-sm-9">
                    <p>{{this.text}}</p>
                </div>
            </div>
        {{/each}}
        <hr>
    {{/each}}
</script>

<script type='text/x-handlebars-template' id='modal'>

    <!-- Modal -->
    <div id="fs-metadata-modal" style="display:none;" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div class="pull-right">
                        <a class="btn-floating waves-effect waves-light btn-default" data-role="export"><i class="material-icons">file_download</i> </a>
                    </div>
<!--                    <button type="button" class="pull-right btn btn-primary" style='margin-right:15px;' data-role="export">
                        <i class="fa fa-download"></i> {{download_metadata}}
                    </button>-->
<!--                    <div class="pull-right">
                        <a class="pull-right btn-floating waves-effect waves-light btn-default" data-role="export"><i class="material-icons">file_download</i> </a>
                    </div>-->
                    <h4 class="modal-title">{{metadata}}</h4>
                </div>
                <div class="modal-body">
                    <div class="pre-scrollable" style="overflow-x: hidden;" data-role="metadata"></div>
                </div>
                <div class="modal-footer">

                    <a class="btn btn-link waves-effect" target="_blank" data-dismiss="modal">
                        <i class="material-icons left">close</i>{{close}}
                    </a>

                </div>
            </div>

        </div>
    </div>

</script>

<script type='text/x-handlebars-template' id='no_data_available'>

    <h4 style='padding-top:35px;text-align: center;'>{{{no_metadata_available}}}</h4>

</script>

